{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "project": ["./tsconfig.json"] },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "eol-last": ["error", "always"],
        "array-bracket-spacing": ["error", "never"]
    },
    "ignorePatterns": ["src/**/*.js", "src/*.js", "*.js", "src/types/**"]
}
